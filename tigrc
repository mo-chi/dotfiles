# utf-8 文字で画面描画する
# set line-graphics = utf-8

# 差分表示に diff-highlight を使う
set diff-options = -m --first-parent

# タブサイズ
# set tab-size = 4

# 水平分割したウィンドウの下画面サイズを % で指定 (行数指定も可)
set split-view-height = 80%

# 自動的にエディタに行番号を表示する
set editor-line-number = yes

# 履歴の保存数
set history-size = 0

# マウスを有効にする
# set mouse = true
